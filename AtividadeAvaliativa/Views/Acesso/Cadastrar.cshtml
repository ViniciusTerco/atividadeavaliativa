@model Buffet.ViewModel.Acesso.CadastrarViewModel
@{
    ViewData["Title"] = "Cadastrar";
}


<div class="row">
    <div class="col">
        <h1 class="display-4">Cadastrar</h1>
    </div>
</div>
<div class="row>">
    <div class="col-6 offset-3">
        @if (Model.Mensagem != null)
        {
            <p>@Model.Mensagem</p>
        }
         @if (Model.ErrosCadastro != null)
        {
            <ul>
                @foreach (var erroString in Model.ErrosCadastro)
                {
                    <li>@erroString</li>
                }
            </ul>
        }
        <form method="post" action="/Acesso/Cadastrar">
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input class="form-control" type="email" id="email" name="email" required/>
            </div>
            <div class="form-group">
                <label for="senha">Senha:</label>
                <input lass="form-control" type="password" id="senha" name="senha" required/>
            </div>
            <div class="form-group">
                <label for="confirmarSenha">Confirmar Senha:</label>
                <input class="form-control" type="password" id="senhaConfirmacao" name="senhaConfirmacao" required/>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Confirmar"/>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col" >
        <a asp-controller="Acesso" asp-action="Login">Voltar para o Login</a>
             <br>
        <a asp-controller="Acesso" asp-action="RecuperarConta">Recuperar Conta</a>
    </div>
</div>


