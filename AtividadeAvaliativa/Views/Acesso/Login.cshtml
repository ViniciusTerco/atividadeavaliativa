@model Buffet.ViewModel.Acesso.LoginViewModel
@{
    ViewData["Title"] = "Login";
} 

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="~/css/Index.css"/>

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p>Login de Usuário.</p>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            @if (Model.Mensagem != null)
            {
                <p>@Model.Mensagem</p>
            }
            @if (Model.ErrosLogin != null)
            {
                <ul>
                    @foreach (var erroString in Model.ErrosLogin)
                    {
                        <li>@erroString</li>
                    }
                </ul>
            }
            <form method="post" action="/Acesso/Login">
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input class="form-control" type="email" id="email" name="email" required/>
                </div>
                <div class="form-group">
                    <label for="senha">Senha:</label>
                    <input lass="form-control" type="password" id="senha" name="senha" required/>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar"/>
                </div>
            </form>
        </div>
    </div>
</div>
   