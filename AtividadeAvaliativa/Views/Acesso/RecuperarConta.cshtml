@model Buffet.ViewModel.Acesso.CadastrarViewModel
@{
    ViewData["Title"] = "Recuperar Conta";
}
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="~/css/Index.css"/>

<div class="text-center">
    <h1 class="display-4">Recuperação</h1>
    <p>Recuperar Senha</p>
    <div class="wrapper fadeInDown">
        <div id="formContent">
          @if (Model.Mensagem != null)
               {
                   <p>@Model.Mensagem</p>
               }
                @if (Model.ErrosCadastro != null)
               {
                   <ul>
                       @foreach (var erroString in Model.ErrosCadastro)
                       {
                           <li>@erroString</li>
                       }
                   </ul>
               }
               <form method="post" action="/acesso/Cadastrar">
                   <div class="form-group">
                       <label for="email">E-mail:</label>
                       <input class="form-control" type="email" id="email" name="email" required/>
                   </div>
                   <div class="form-group">
                       <label for="senha">Senha:</label>
                       <input lass="form-control" type="password" id="senha" name="senha" required/>
                   </div>
                   <div class="form-group">
                       <label for="confirmarSenha">Confirmar Senha:</label>
                       <input class="form-control" type="password" id="senhaConfirmacao" name="senhaConfirmacao" required/>
                   </div>
                   <div class="form-group">
                       <input class="btn btn-primary" type="submit" value="Confirmar"/>
                   </div>
               </form>
           </div>
       </div>
       <div class="row">
           <div class="col" >
               <a asp-controller="Acesso" asp-action="Login">Voltar para o Login</a>
                    <br>
               <a asp-controller="Acesso" asp-action="RecuperarConta">Recuperar Conta</a>
           </div>
       </div>
      </div>
   