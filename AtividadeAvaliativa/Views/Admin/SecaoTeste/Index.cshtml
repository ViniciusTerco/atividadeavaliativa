@model AtividadeAvaliativa.ViewModel.Admin.IndexViewModel
@{
  ViewData["Title"] = "Seção teste";
}
<div class="row">
  <div class="col">
    <div class="card mb-3">
      <div class="card-header">
        <h2>Formulário de Teste de Campos</h2>
      </div>
      <div class="card-body">
        @if (@Model.FormMensagemSucesso != null)
        {
          <p class="alert alert-success alert-dismissible">
            @Model.FormMensagemSucesso
          </p>
        }
        
        @if (@Model.FormMensagensErro != null)
        {
          <ul class="alert alert-danger">
            @foreach (var msgErro in @Model.FormMensagensErro)
            {
              <li>@msgErro</li>
            }
          </ul>
        }
        <form action="@Url.RouteUrl("Admin", values:new {Controller = "SecaoTeste" })" method="post">
          <div class="form-control">
            <label for="txtCompoTexto">Campo Texto</label>
            <input type="text" id="txtCampoTexto" name="txtCampoTexto" class="form-control"></input>
          </div>
          <div class="form-control">
            <label for="txtCompoData">Campo Data</label>
            <input type="text" id="txtCampoData" name="txtCampoData" class="form-control"></input>
          </div>
          <div class="form-control">
            <label for="cmbCampoSelect">Campo Select</label>
            <select id="cmbCampoSelect" name="cmbCampoSelect" class="form-control">
              <option value="">Selecione</option>
              <option value="1">Valor 1</option>
              <option value="2">Valor 2</option>
              <option value="3">Valor 3</option>
            </select>
          </div>
          <div class="form-control form-check">
            <input type="checkbox" id="cbxCampoCheckBox" name="cbxCampoCheckBox" value="Valor Campo Checkbox"
                   class="form-check-input"/>
            <label class="form-check-label" for="cbxCampoCheckBox">Campo Check Box</label>
          </div>
          <div class="form-control form-check">
            <input type="checkbox" id="cbxCampoCheckBoxSemValue" name="cbxCampoCheckBoxSemValue" 
                   class="form-check-input"/>
            <label class="form-check-label" for="cbxCampoCheckBoxSemValue">Campo Check Box Sem Value</label>
          </div>
          <div class="form-control form-check">
            <div class="form-check">
              <input type="radio" id="rdbCampoRadio1" name="rdbCampoRadio1" value="Radio 01" 
                     class="form-check-input"/>
              <label class="form-check-label" for="rdbCampoRadio1">Campo Radio 1</label>
            </div>
          </div>
          <div class="form-control form-check">
            <div class="form-check">
              <input type="radio" id="rdbCampoRadio2" name="rdbCampoRadio2" value="Radio 02" 
                     class="form-check-input"/>
              <label class="form-check-label" for="rdbCampoRadio2">Campo Radio 2</label>
            </div>
          </div>
          <div class="form-control form-check">
            <div class="form-check">
              <input type="radio" id="rdbCampoRadio3" name="rdbCampoRadio3" value="Radio 03" 
                     class="form-check-input"/>
              <label class="form-check-label" for="rdbCampoRadio3">Campo Radio 3</label>
            </div>
          </div>
          <div class="form-group">
            <label for="txtCampoTextArea">Campo Text Área</label>
            <textarea id="txtCampoTextArea" name="txtCampoTextArea" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" value="Enviar" class="bnt btn-primary">
          </div>
        </form>
      </div>
    </div>
    
    <div class="card mb-3">
      <div class="card-header">
        <h2>Listagem de Dados</h2>
      </div>
      <div class="card-body">
        <span>
          <strong>Filtros: </strong>
        </span>
        <form action="@Url.RouteUrl("Admin", new {controller = "SecaoTeste"})" method="get">
          <div class="form-row align-items-center">
            <div class="col-auto">
              <label for="filtroNome">Nome</label>
              <input type="text" class="form-control mb-2" id="filtroNome" name="filtroNome" value="@Model.Filtro.Nome">
            </div>
            <div class="col-auto">
              <label for="filtroEmail">Email</label>
              <input type="text" class="form-control mb-2" id="filtroEmail" name="filtroEmail" value="@Model.Filtro.Email">
            </div>
            <div class="col-auto">
              <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" @(@Model.Filtro.ApenasComEventos ? Html.Raw("checked") : Html.Raw(""))
                       id="filtroApenasComEventos" name="filtroApenasComEventos" value="true">
                <label class="form-check-label" for="filtroApenasComEventos">Apenas clientes com Eventos</label>
              </div>
            </div>
          </div>
        </form>
        <hr/>
        @if (@Model.ListaCliente.Count > 0)
        {
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>ID</th>
              <th>Nome</th>
              <th>Email</th>
              <th>Quantidade de Eventos</th>
              <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cliente in @Model.ListaCliente)
            {
              <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.QtdEventos</td>
                <td class="text-center">
                  <a class="bnt btn-primary btn-sm" href="/Admin/SecaoTeste/Ver/@cliente.Id">Ver/Editar</a>
                  <a class="bnt btn-primary btn-sm" href="/Admin/SecaoTeste/Remover /@cliente.Id">Remover</a>
                </td>
              </tr>
            }
            </tbody>
          </table>
        }
        else
        {
          <p class="text-center">Nenhum Registro Foi Encontrado.</p>
        }
      </div>
    </div>
  </div>
</div>
